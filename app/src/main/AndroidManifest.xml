<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.somet.somet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Somet"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme.Light">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.SignupActivity"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.WorkoutActivity"
            android:label="@string/title_activity_workout"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.Light" />
        <activity
            android:name=".activities.WorkoutsActivity"
            android:label="@string/title_activity_workouts"
            android:theme="@style/AppTheme.LightBackground" />
        <activity
            android:name=".activities.PlansActivity"
            android:label="@string/title_activity_plans"
            android:theme="@style/AppTheme.LightBackground" />
        <activity
            android:name=".activities.PlanActivity"
            android:label="@string/title_activity_plan"/>
    </application>

</manifest>