<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.somet.somet.activities.WorkoutActivity$OpenedWorkoutDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardopenedWk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cards_margin"
            card_view:cardBackgroundColor="@color/cardsbg"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/cards_elevation">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/cards_padding"
                android:paddingLeft="@dimen/cards_padding"
                android:paddingRight="@dimen/cards_padding"
                android:paddingBottom="@dimen/cards_big_padding"
                android:orientation="vertical">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/openedWkDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_text"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/card_text"
                    app:fontFamily="roboto"
                    app:textStyle="normal"
                    app:textWeight="normal" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/openedWkComments"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_text"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/card_text"
                    app:fontFamily="roboto"
                    app:textStyle="normal"
                    app:textWeight="normal" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/openedWkDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_text"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/card_text"
                    app:fontFamily="roboto"
                    app:textStyle="normal"
                    app:textWeight="normal" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/openedWkDuration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_text"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/card_text"
                    app:fontFamily="roboto"
                    app:textStyle="normal"
                    app:textWeight="normal" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>