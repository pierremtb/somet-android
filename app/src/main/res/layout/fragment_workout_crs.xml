<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="io.somet.somet.WorkoutActivity$OpenedWorkoutCRsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardopenedWkCrs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cards_margin"
            card_view:cardBackgroundColor="@color/cardsbg"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/cards_elevation">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/cards_padding"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.hookedonplay.decoviewlib.DecoView
                            android:layout_width="fill_parent"
                            android:layout_height="70dp"
                            android:id="@+id/arcCREffort"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/cards_padding"
                            android:textAlignment="center"
                            android:text="Effort"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_big" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.hookedonplay.decoviewlib.DecoView
                            android:layout_width="fill_parent"
                            android:layout_height="70dp"
                            android:id="@+id/arcCRPleasure"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/cards_padding"
                            android:textAlignment="center"
                            android:text="Plaisir"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_big" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/cards_padding"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.hookedonplay.decoviewlib.DecoView
                            android:layout_width="fill_parent"
                            android:layout_height="70dp"
                            android:id="@+id/arcCRSensations"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/cards_padding"
                            android:textAlignment="center"
                            android:text="Sensations"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_big" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.hookedonplay.decoviewlib.DecoView
                            android:layout_width="fill_parent"
                            android:layout_height="70dp"
                            android:id="@+id/arcCRMood"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/cards_padding"
                            android:textAlignment="center"
                            android:text="Humeur"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_big" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>
